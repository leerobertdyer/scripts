# A task generator to keep track of my daily work items.

if [[ $1 == "!" ]]; then
	vim ~/Desktop/.TASKS.txt
else
TIME=$(date +%c)
    echo "Enter your task: "
    read TASK
    if [ "$TASK" = "" ]
    then
      echo "Task abandoned"
    else
      touch ~/Desktop/.TASKS.txt
      echo "# ${TIME}: \n- ${TASK}" >> ~/Desktop/.TASKS.txt
      echo "" >> ~/Desktop/.TASKS.txt
      echo "Task has been added."
    fi
fi
